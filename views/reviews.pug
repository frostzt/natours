extends base

mixin reviewCard(review)
  .reviews__card.ma-bt-lg.my-review
    .reviews__avatar
      img.reviews__avatar-img(
        src=`/img/tours/${review.tour.imageCover}`,
        alt=review.user.name
      )
      h6.reviews__user= review.tour.name
    p.reviews__text= review.review
    .reviews__rating.ma-bt-md
      each star in [1,2,3,4,5]
        svg.reviews__star(
          class=`reviews__star--${review.rating >= star ? "active" : "inactive"}`
        )
          use(xlink:href='/img/icons.svg#icon-star')
    .review__buttons(data-id=`${review.id}`)
      a#update-review.btn.btn--green.btn--small Update
      a#delete-review.btn.btn--red.btn--small Delete

block content
  main.main
    a.back-btn.btn.btn--green.btn--small(href='/me') ðŸ‘ˆBack
    .my-reviews
      each review in reviews
        +reviewCard(review)
